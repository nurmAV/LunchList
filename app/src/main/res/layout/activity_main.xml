<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.axelv.lunchlist.MainActivity" android:id="@+id/layout">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="388dp"
            android:layout_height="55dp" android:id="@+id/linearLayout2">
        <Button
                android:text="Yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/yesterday" android:layout_weight="1"/>
        <Button
                android:text="Tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tomorrow" android:layout_weight="1"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="368dp"
            android:layout_height="495dp" android:id="@+id/scrollView2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/fragmentContainer"
                tools:layout_editor_absoluteY="55dp" tools:layout_editor_absoluteX="8dp">

        </FrameLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
